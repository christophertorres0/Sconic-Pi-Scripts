# NAME OF SONG: X Files by Mark Snow
# SHEET MUSIC: https://www.musicnotes.com/sheetmusic/mtd.asp?ppn=MN0097480
# BPM USED: https://songbpm.com/x-files?q=x%20files
use_bpm 88
use_synth :pulse
s= 0.33
index=0
first_part_notes =[:a4, :c5, :e5]

define :first_part do
  3. times do
    play first_part[index]
    sleep s
    index = index+1
  end
end

play :f5
sleep s

play :c5
sleep s
play :e5
sleep s
use_synth :piano

play :a4
sleep 0.5
play :e5
sleep 0.5
play :d5
sleep 0.5
play :e5
sleep 0.5
play :g5
sleep 0.5
play :e5
sleep 0.5


